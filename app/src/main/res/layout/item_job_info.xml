<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageViewJob"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/image_rounded_background"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sample1" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imageViewJob"
        android:layout_alignParentTop="true"
        android:text="알바 제목"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_toEndOf="@id/imageViewJob"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:text="장소"
        android:textColor="#888888"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewLocation"
        android:layout_toEndOf="@id/imageViewJob"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:text="시간"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewWage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageViewJob"
        android:layout_alignBottom="@id/imageViewJob"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:text="시급"
        android:textColor="#444444"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textViewWage"
        android:layout_marginTop="10dp"
        android:background="#D0D0D0" />

</RelativeLayout>