<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="60dp"
        android:gravity="top|center_horizontal">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="450dp"
            android:layout_height="260dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="시흥 로고"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/etPhone"
            android:hint="아이디 / 전화번호"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/input_box"
            android:paddingHorizontal="12dp" />

        <!-- 비밀번호 -->
        <EditText
            android:id="@+id/etPassword"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/input_box"
            android:paddingHorizontal="12dp" />

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:paddingVertical="2dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#043682"
            android:text="로그인"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:paddingVertical="2dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#8D8D8D"
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:textSize="22sp"/>

        <LinearLayout
            android:id="@+id/btnKakaoLogin"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:paddingVertical="2dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#FDDF50"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="카카오 아이콘"
                android:src="@drawable/ic_kakao_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical"
                android:text="카카오 로그인"
                android:textColor="#191919"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="#888888"
                android:layout_weight="4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="#888888"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="또는"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="#888888"
                android:layout_weight="4"/>

        </LinearLayout>

        <!-- 비회원 로그인 버튼 -->
        <Button
            android:id="@+id/btnGuest"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:paddingVertical="2dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/black"
            android:text="비회원으로 로그인"
            android:textColor="#FFFFFF"
            android:textSize="22sp"/>

    </LinearLayout>
</RelativeLayout>
